<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizzabackground"
    tools:context=".DominosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="2000dp">

                <ImageView
                    android:id="@+id/picfood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/creamytomatopizza"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/titletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="CreamyTomatoPizza"
                    android:textColor="#070707"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/picfood" />

                <ImageView
                    android:id="@+id/minusbtn"
                    android:layout_width="53dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/minus"
                    app:layout_constraintBottom_toBottomOf="@+id/picfood"
                    app:layout_constraintEnd_toEndOf="@+id/plusbtn"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription,MissingConstraints" />

                <TextView
                    android:id="@+id/inctxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="225dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#050505"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/plusbtn"
                    app:layout_constraintStart_toEndOf="@+id/minusbtn"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/plusbtn"
                    android:layout_width="43dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="232dp"
                    android:src="@drawable/plus"
                    app:layout_constraintBottom_toBottomOf="@+id/minusbtn"
                    app:layout_constraintStart_toStartOf="@+id/picfood"
                    app:layout_constraintTop_toTopOf="@+id/minusbtn"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/addtocart"
                    android:layout_width="172dp"
                    android:layout_height="48dp"
                    android:text="Add To Cart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.475"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/picfood"
                    tools:ignore="HardcodedText" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="392dp"
                    android:layout_height="1500dp"
                    app:layout_constraintTop_toBottomOf="@+id/addtocart"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                    <ImageView
                        android:id="@+id/masalapizza"
                        android:layout_width="393dp"
                        android:layout_height="283dp"
                        android:src="@drawable/masalapizza"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/masalatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Masala Pizza"
                        android:textColor="#070707"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/masalapizza" />

                    <ImageView
                        android:id="@+id/minusbtn2"
                        android:layout_width="53dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/minus"
                        app:layout_constraintBottom_toBottomOf="@+id/masalapizza"
                        app:layout_constraintEnd_toEndOf="@+id/plusbtn2"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="ContentDescription,MissingConstraints" />

                    <TextView
                        android:id="@+id/inctxt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="225dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#050505"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/plusbtn2"
                        app:layout_constraintStart_toEndOf="@+id/minusbtn2"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/plusbtn2"
                        android:layout_width="43dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="232dp"
                        android:src="@drawable/plus"
                        app:layout_constraintBottom_toBottomOf="@+id/minusbtn2"
                        app:layout_constraintStart_toStartOf="@+id/masalapizza"
                        app:layout_constraintTop_toTopOf="@+id/minusbtn2"
                        app:layout_constraintVertical_bias="0.0"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/addtocart2"
                        android:layout_width="172dp"
                        android:layout_height="48dp"
                        android:text="Add To Cart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.475"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/masalapizza"
                        tools:ignore="HardcodedText" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="1000dp"
                        app:layout_constraintTop_toBottomOf="@+id/addtocart2"
                        tools:layout_editor_absoluteX="0dp">

                        <ImageView
                            android:id="@+id/cheeseburger"
                            android:layout_width="393dp"
                            android:layout_height="346dp"
                            android:src="@drawable/cheeseburgur"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="ContentDescription,MissingConstraints"
                            tools:layout_editor_absoluteY="330dp" />

                        <TextView
                            android:id="@+id/cheesetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Cheese Burger"
                            android:textColor="#070707"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cheeseburger"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/minusbtn3"
                            android:layout_width="53dp"
                            android:layout_height="36dp"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/minus"
                            app:layout_constraintBottom_toBottomOf="@+id/cheeseburger"
                            app:layout_constraintEnd_toEndOf="@+id/plusbtn3"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:ignore="ContentDescription,MissingConstraints" />

                        <TextView
                            android:id="@+id/inctxt3"
                            android:layout_width="6dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="304dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#050505"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toStartOf="@+id/plusbtn3"
                            app:layout_constraintHorizontal_bias="0.467"
                            app:layout_constraintStart_toEndOf="@+id/minusbtn3"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/plusbtn3"
                            android:layout_width="43dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="232dp"
                            android:src="@drawable/plus"
                            app:layout_constraintBottom_toBottomOf="@+id/minusbtn3"
                            app:layout_constraintStart_toStartOf="@+id/cheeseburger"
                            app:layout_constraintTop_toTopOf="@+id/minusbtn3"
                            app:layout_constraintVertical_bias="0.0"
                            tools:ignore="ContentDescription" />

                        <Button
                            android:id="@+id/addtocart3"
                            android:layout_width="172dp"
                            android:layout_height="48dp"
                            android:text="Add To Cart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.475"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cheeseburger"
                            tools:ignore="HardcodedText" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="392dp"
                            android:layout_height="594dp"
                            app:layout_constraintTop_toBottomOf="@+id/addtocart3"
                            tools:layout_editor_absoluteX="0dp">

                            <ImageView
                                android:id="@+id/spicyburger"
                                android:layout_width="393dp"
                                android:layout_height="346dp"
                                android:src="@drawable/spicyvegburger"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="ContentDescription,MissingConstraints"
                                tools:layout_editor_absoluteY="330dp" />

                            <TextView
                                android:id="@+id/spicytext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Spicy Veg Burger"
                                android:textColor="#070707"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/spicyburger"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/minusbtn4"
                                android:layout_width="53dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="16dp"
                                android:src="@drawable/minus"
                                app:layout_constraintBottom_toBottomOf="@+id/spicyburger"
                                app:layout_constraintEnd_toEndOf="@+id/plusbtn4"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:ignore="ContentDescription,MissingConstraints" />

                            <TextView
                                android:id="@+id/inctxt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="304dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textColor="#050505"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toStartOf="@+id/plusbtn4"
                                app:layout_constraintHorizontal_bias="0.465"
                                app:layout_constraintStart_toEndOf="@+id/minusbtn4"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/plusbtn4"
                                android:layout_width="43dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="232dp"
                                android:src="@drawable/plus"
                                app:layout_constraintBottom_toBottomOf="@+id/minusbtn4"
                                app:layout_constraintStart_toStartOf="@+id/spicyburger"
                                app:layout_constraintTop_toTopOf="@+id/minusbtn4"
                                app:layout_constraintVertical_bias="0.0"
                                tools:ignore="ContentDescription" />

                            <Button
                                android:id="@+id/addtocart4"
                                android:layout_width="172dp"
                                android:layout_height="48dp"
                                android:text="Add To Cart"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.475"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/spicyburger"
                                tools:ignore="HardcodedText" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>